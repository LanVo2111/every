        img.stars(src=path + '/assets/images/stars.png' alt='Stars' data-0="top: 10%; left: 22%;" data-1000="top: -100%; left: 30%;")
        img.moon(src=path + '/assets/images/moon.png' alt='Moon' data-0="top: 10%;" data-1000="top: -100%;")
