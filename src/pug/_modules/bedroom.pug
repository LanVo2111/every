.scene.first(data-2700="top: 0%" data-3700="top: -100%; display: block;" data-3701="display: none;")
  .sky(data-0="background: rgb(74,74,74);" data-1000="background: rgb(140,201,220);")
    .wrapper
      .sky-inner
        .logo
        //- img.logo(src=path + '/assets/images/every-last-drop.png' alt='Every Last Drop')
