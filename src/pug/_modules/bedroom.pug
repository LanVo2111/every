        img.rug(src=path + '/assets/images/rug.png', alt="Rug" data-1800='top: 0%; display: block;' data-2700='top: 200%; display: none')
        img.tree(src=path + '/assets/images/tree.png', alt="Tree" data-1900='right: 0%; display: block;' data-2700='right: 200%; display: none')